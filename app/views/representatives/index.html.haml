%div{ class: "container mx-auto" }
  %h1.text-center.text-2xl.font-bold.leading-loose.text-indigo-700.mt-8 Representatives
  %div{ class: "grid xs:grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-2" }
    - @representatives.each do |member|
      %div
        .max-w-sm.rounded-lg.overflow-hidden.shadow-lg.bg-white.m-4
          .flex.flex-col
            = link_to representative_path(member.member_id), "aria-label": "Link to #{member.short_title} #{member.last_name}'s profile page." do
              =image_tag "https://theunitedstates.io/images/congress/225x275/#{member.member_id}.jpg", alt: "#{member.short_title} #{member.last_name}'s' portrait.", class: "w-full"
              = render member
  .mx-auto
    = will_paginate