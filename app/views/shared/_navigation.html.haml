%input#main-menu-checkbox{:type => "checkbox"}/
.navbar
  %label.menu-toggle{:for => "main-menu-checkbox"}
    %span.sr-only Open main menu
    %span.fa.fa-bars{"aria-hidden" => "true"}
  %h1.logo= link_to 'Your Congress', root_path
  %nav#main-menu.main-menu{"aria-expanded" => "false", "aria-label" => "Main menu", :role => "navigation"}
    %label.menu-close{:for => "main-menu-checkbox"}
      %span.sr-only Close main menu
      %span.fa.fa-close{"aria-hidden" => "true"}
    %ul
      %li
        = link_to 'House', representatives_path
      %li
        = link_to 'Senate', senators_path
      %li
        %a{:href => "#"} Contact

  %label.backdrop{"aria-hidden" => "true", :for => "main-menu-checkbox", :hidden => "", :tabindex => "-1"}
