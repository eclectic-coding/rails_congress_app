%div{class: "container mx-auto p-5 sm:w-full md:w-4/5 lg:w-3/5 xl:w-1/2"}
  %h1.text-center.mb-3 Log in
  .bg-white.shadow-md.rounded.px-8.pt-6.pb-8.mb-4.flex.flex-col
    .mb-4
      = form_with(url: login_path, scope: :session, local: true) do |f|
        = f.label :email, {class: "block text-grey-darker text-sm font-bold mb-2 "}
        = f.email_field :email, {class: "shadow appearance-none border rounded w-full mb-2 py-2 px-3 text-grey-darker"}

        = f.label :password, {class: "block text-grey-darker text-sm font-bold mb-2"}
        = f.password_field :password, {class: "shadow appearance-none border rounded w-full mb-2 py-2 px-3 text-grey-darker"}

        =f.label :remember_me, class: "md:flex md:items-center my-3" do
          = f.check_box :remember_me
          %span.pl-2
            Remember me on this computer

        = f.submit "Log in", class: "btn btn-primary m-4"
        %button
        = link_to 'Sign up now', signup_path, { class: "btn bg-transparent hover:bg-indigo-700 text-indigo-700 hover:text-white border border-indigo-700 hover:border-transparent m-4" }